{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "scripthost", "es2018"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "ts-node"
  ]
}
